
<MainWindow>:

    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: (1,1,1,.8)
            Rectangle:
                source : 'download.jpg'
                size: self.size
                pos: self.pos


        rows:2
        Label:
            text: "Mathematics"
            font_size: 40
        GridLayout:
            rows: 5

            Button:
                text: "Lesson1-Story"
                background_color: (0.06, .36, .4, .775)
                on_release:root.change()

            Button:
                text: "Lesson2-Counting"
                background_color: (0.06, .36, .4, .775)
                on_release:root.change1()

            Button:
                text: "Lesson3-Addition"
                background_color: (0.06, .36, .4, .775)
                on_release:root.change2()


            Button:
                text: "Lesson4-Subtraction"
                background_color: (0.06, .36, .4, .775)
                on_release:root.change3()

            Button:
                text: "Lesson5-Shapes"
                background_color: (0.06, .36, .4, .775)
                on_release:root.change4()

            Button:
                text: "back"
                background_color: (0.06, .36, .4, .775)



