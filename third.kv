
<MainWindow>:
    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: (1,1,1,.8)
            Rectangle:
                source : 'mathmodule.jpg'
                size: self.size
                pos: self.pos
        Label:
            text: "Math Module Test"
            font_size: 40


        Button:
            text: "Start"
            size_hint: .7,.145
            background_color: (0.06, .36, .4, .375)
            font_size:40
            on_release:root.change()


        Button:
            text: "Back"

            size_hint: .7,.145
            background_color: (0.06, .36, .4, .375)
            font_size:40

